# ===================================
# Robotman Environment Variables
# ===================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env with secrets to version control

# -----------------------------------
# Database Configuration
# -----------------------------------
POSTGRES_USER=robotman
POSTGRES_PASSWORD=robotman
POSTGRES_DB=robotman
POSTGRES_URL=postgres://robotman:robotman@postgres:5432/robotman

# -----------------------------------
# API Service
# -----------------------------------
PORT=3000
WEB_URL=http://localhost:3000
BOT_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN
API_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_API_WEBHOOK_ID/YOUR_API_WEBHOOK_TOKEN
CLIENT_ID=your_discord_oauth_client_id
CLIENT_SECRET=your_discord_oauth_client_secret
NODE_ENV=production

# -----------------------------------
# Bot Service
# -----------------------------------
DISCORD_TOKEN=your_discord_bot_token_here
BOT_PREFIX=!
BOT_OWNER=your_discord_user_id
SCORE_GUILD=your_guild_id_for_scoring

# -----------------------------------
# Optional Third-Party API Keys
# -----------------------------------
# Google Services
GOOGLE_SEARCH_KEY=
GOOGLE_ENGINE_KEY=

# Google Sheets (for leaderboard/game features)
SERVICE_ACCOUNT_EMAIL=
SERVICE_ACCOUNT_KEY=
SPREADSHEET_ID=

# Image & Media Services
IMGUR_CLIENT_ID=
PASTEE_KEY=

# Entertainment APIs
OPEN_MOVIE_DB_KEY=
COMICVINE_KEY=

# Dictionary/Reference
WEBSTER_DICTIONARY_KEY=
WEBSTER_THESAURUS_KEY=

# -----------------------------------
# Dashboard Service (if used)
# -----------------------------------
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_WEB_URL=http://localhost:3001
NEXT_PUBLIC_CLIENT_ID=your_discord_oauth_client_id
NEXT_PUBLIC_BOT_AVATAR=https://cdn.discordapp.com/avatars/YOUR_BOT_ID/YOUR_AVATAR_HASH.png

# -----------------------------------
# Security Notes
# -----------------------------------
# For production:
# - Use strong, randomly generated passwords for POSTGRES_PASSWORD
# - Store secrets in your orchestration platform's secret manager (GitHub Secrets, Kubernetes Secrets, AWS Secrets Manager, etc.)
# - Do not expose postgres port 5432 to the internet
# - Use environment-specific .env files (.env.production, .env.staging)
